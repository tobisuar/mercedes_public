{% extends 'base.html.twig' %}

{% block title %}Proveedor{% endblock %}

{% block body %}
    <h1>Proveedor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ proveedor.Nombre }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ proveedor.Fecha ? proveedor.Fecha|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Cuit</th>
                <td>{{ proveedor.Cuit }}</td>
            </tr>
        </tbody>
    </table>

    <div class="modal-footer">
        <a class="btn btn-outline-primary" href="{{ path('proveedor_index') }}">Volver a la lista</a>
        <a class="btn btn-primary" href="{{ path('proveedor_edit', {'id': proveedor.id}) }}">Editar</a>
        {{ include('proveedor/_delete_form.html.twig') }}
    </div>

    <h3>Pedidos de {{ proveedor.Nombre }}</h3>

    {{ include('/pedido/list.html.twig', {pedidos: proveedor.pedidos}) }}

{% endblock %}
